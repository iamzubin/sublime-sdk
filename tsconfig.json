{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "helpers/**/*"],
  "exclude": ["node_modules", "dist"]
}
